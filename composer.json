{
	"require": {
		"laravel/framework": "4.2.*",
		"league/fractal": "~0.8",
		"erusev/parsedown": "~1.0",
		"ikimea/browser": "~1.0",
		"laracasts/presenter": "~0.1",
		"guzzlehttp/guzzle": "~4.0",
		"daylerees/sanitizer": "*",
		"zizaco/entrust": "1.2.*"
	},

	"require-dev": {
		"raveren/kint": "dev-master",
		"fzaninotto/faker": "*",
		"barryvdh/laravel-debugbar": "1.*"
	},

	"autoload": {
		"classmap": [
			"Anodyne/Help/database/migrations",
			"Anodyne/Help/database/seeds"
		],
		
		"psr-4": {
			"Help\\": "Anodyne\\Help\\Web",
			"Help\\Api\\": "Anodyne\\Help\\Api",
			"Help\\Extensions\\": "Anodyne\\Help\\Extensions",
			"Help\\Foundation\\": "Anodyne\\Help\\Foundation"
		}
	},
	
	"config": {
		"preferred-install": "dist",
		"process-timeout": 500
	},

	"minimum-stability": "dev",
	"prefer-stable": true,

	"post-update-cmd": [
		"php artisan debugbar:publish"
	]
}